include ../components.pug

doctype html
html(lang="fr")
    +drezzingHeader('Confirmation de commande')
    body(style="font-family: Arial, sans-serif; margin: 0; padding: 0;")
        - var orderID = data.id.split("_")[1]
        - var dateDay = new Date(data.created_at).toLocaleDateString("fr-FR", {dateStyle: "short"})
        - var dateTime = new Date(data.created_at).toLocaleTimeString("fr-FR", {timeStyle: "medium"})

        p Bonjour #{data.customer.first_name},
        p Nous avons bien reçu votre commande et elle est en cours de traitement.
        div
            p(style="margin: 0px") Commande #{orderID}
            p(style="margin: 0px") Passée le #{dateDay} à #{dateTime}

            p(style="margin-bottom: 0px;") Contenu de la commande :
            ul(style="margin-top: 4px;")
                each item in data.items
                    li #{item.title} (#{item.description}) - Quantité : #{item.quantity}

        p(style="margin-top: 4px; margin-bottom: 0px") Sous-total : #{data.subtotal}
        p(style="margin: 0px;") Livraison : #{data.shipping_total}
        p(style="margin: 0px;") Réduction : #{data.discount_total}
        p(style="margin: 0px;") Total : #{data.total}

        include ../footer.pug
